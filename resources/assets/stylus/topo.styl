$color1 = #F3BC55;
$color2 = #fedd7a;

.menu
    background-color: #000;
    height: 70px;
    padding: 3px;
    position:relative;

    .topo_esquerdo
        float: left;

        .img_logo
            width: 150px;
            max-height: 65px;
            min-height: 65px;

        .img_logo_mobile
            width: 100px;
            max-height: 65px;
            min-height: 65px;

        .links
            display:inline;
            a
                margin:10px;
                font-weight:bold;
                text-decoration:none;
                color:$color1;
            a:hover
                color:$color2;
            .active
                color:#fff;


    .topo_direito
        float:right;
        padding-right: 5px;
        margin-top: 15px;
        .btn-login, .btn-cadastro
            background-color:$color1;
            color:#000;
            border:	0px;
        .btn-login:hover, .btn-cadastro:hover
            background-color:$color2;
            color:#000;

        .menu-mobile
            background-color:$color2;
            text-align: center;
            button
                background-color:$color1;
                color:#000;
                border:	0px;


/*MENU LOGADO (FOTO) */
.btn-group
    .box
        position:relative;
        display: block;
        .imagem_login
            width: 80px;
            max-height: 65px;
            min-height: 65px;
            cursor: pointer;
            margin-top: -15px;
        .mask
            transition: ease all 0.5s;
            opacity:0;
            background-color: #e8a84e;
            position:absolute;
            top:0;
            width:100%;
            height: 65px;
            padding-top: 15px;
            margin-top: -15px;
        .mask
            span
                color:#f00;
                font-weight: bold;
                font-size:12px;
                cursor:pointer;
    .box:hover
        .mask
            opacity:0.9;
    .menu_logado
        margin: 2px -100px 0;

/*CAMPO BUSCAR*/
.campo-buscar
	position: absolute;
	width: 20%;
	top:80px;
	right:10px;
