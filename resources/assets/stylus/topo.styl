$color1 = #282c34;
$color2 = #7f5900;
$color3 = #7f6526;
$color4 = #cc8f00;
$color5 = #F3B300;
$color6 = #ffca4c;
$color7 = #eee;
.menu
    background-color:$color1;
    width:100%;
    height: 70px;
    padding: 3px;
    position:relative;
    .topo_esquerdo
        float: left;
        .img_logo
            width: 150px;
            max-height: 65px;
            min-height: 65px;
        .links
            display:inline;
            a
                margin:10px;
                font-weight:bold;
                text-decoration:none;
                color:$color5;
            a:hover
                color:$color6;
            .active
                color: $color7;
    .topo_direito
        float:right;
        padding-right: 5px;
        margin-top: 15px;
        .btn-login, .btn-cadastro
            background-color:$color5;
            color:$color1;
            border:	0px;
        .btn-login:hover, .btn-cadastro:hover
            background-color:$color6;
            color:$color1;
        /*MENU LOGADO (FOTO) */
        .btn-group
            .box
                position:relative;
                display: block;
                .imagem_login
                    width: 80px;
                    max-height: 65px;
                    min-height: 65px;
                    cursor: pointer;
                    margin-top: -15px;
                .mask
                    transition: ease all 0.5s;
                    opacity:0;
                    background-color: #e8a84e;
                    position:absolute;
                    top:0;
                    width:100%;
                    height: 65px;
                    padding-top: 15px;
                    margin-top: -15px;
                .mask
                    span
                        color:#f00;
                        font-weight: bold;
                        font-size:12px;
                        cursor:pointer;
            .box:hover
                .mask
                    opacity:0.9;
            .menu_logado
                margin: 2px -100px 0;
                li
                    a:hover
                        background-color: $color4;

.menu-mobile
    background-color: #000;
    width:100%;
    height: 50px;
    padding: 3px;
    position:relative;
    .topo_esquerdo
        float: left;
        .img_logo_mobile
            width: 80px;
            max-height: 45px;
            min-height: 45px;
        .links
            display:inline;
            a
                margin:10px;
                font-weight:bold;
                text-decoration:none;
                color:$color5;
            a:hover
                color:$color6;
            .active
                color:$color7;
    .topo_direito
        float:right;
        padding-right: 5px;
        margin-top: 5px;
        .dropdown
            background-color:$color6;
            text-align: center;
            button
                background-color:$color5;
                color:$color1;
                border:	0px;
        /*MENU LOGADO (FOTO) */
        .btn-group
            .box
                position:relative;
                display: block;
                .imagem_login
                    width: 50px;
                    max-height: 45px;
                    min-height: 45px;
                    cursor: pointer;
                    margin-top: -6px;
            .menu_logado
                margin: 2px -100px 0;

