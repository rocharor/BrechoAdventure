@import "global.styl";

.menu
    background-color:$color1;
    width:100%;
    height: 70px;
    padding: 3px;
    position:relative;
    .topo_esquerdo
        float: left;
        .img_logo
            width: 150px;
            max-height: 65px;
            min-height: 65px;
        .links
            display:inline;
            a
                margin:10px;
                font-weight:bold;
                text-decoration:none;
                color:$color5;
            a:hover
                color:$color6;
            .active
                color: $color7;
                font-style:italic;
    .topo_direito
        float:right;
        padding-right: 5px;
        margin-top: 15px;
        .btn-login, .btn-cadastro
            background-color:$color5;
            color:$color1;
            border:	0px;
        .btn-login:hover, .btn-cadastro:hover
            background-color:$color6;
            color:$color1;
        /*MENU LOGADO (FOTO) */
        .btn-group
            .box
                position:relative;
                display: block;
                .imagem_login
                    width: 80px;
                    max-height: 65px;
                    min-height: 65px;
                    cursor: pointer;
                    margin-top: -15px;
                .mask
                    transition: ease all 0.5s;
                    opacity:0;
                    background-color: #e8a84e;
                    position:absolute;
                    top:0;
                    width:100%;
                    height: 65px;
                    padding-top: 15px;
                    margin-top: -15px;
                .mask
                    span
                        color:#f00;
                        font-weight: bold;
                        font-size:12px;
                        cursor:pointer;
            .box:hover
                .mask
                    opacity:0.9;
            .menu_logado
                margin: 2px -100px 0;
                li
                    a:hover
                        background-color: $color4;
                        font-weight:bold;
                        // padding: 3px 13px;
                        padding: 3px 10pt;
                    .active
                        background-color: $color4;
                        color:$color7;
                        font-weight:bold;
                        font-style:italic;

.menu-mobile
    background-color: $color1;
    width:100%;
    height: 50px;
    padding: 3px;
    position:relative;
    .topo_esquerdo
        float: left;
        .img_logo_mobile
            width: 80px;
            max-height: 45px;
            min-height: 45px;
        .links
            display:inline;
            a
                margin:10px;
                font-weight:bold;
                text-decoration:none;
                color:$color5;
            a:hover
                color:$color6;
            .active
                color:$color7;
    .topo_direito
        float:right;
        padding-right: 5px;
        margin-top: 5px;
        .dropdown
            background-color:$color6;
            text-align: center;
            button
                background-color:$color5;
                color:$color1;
                border:	0px;
        /*MENU LOGADO (FOTO) */
        .btn-group
            .box
                position:relative;
                display: block;
                .imagem_login
                    width: 45px;
                    max-height: 40px;
                    min-height: 40px;
                    margin-top: -5px;
            .menu_logado
                margin: 2px -100px 0;
            li
                .active
                    background-color: $color4;
                    color:$color7;
                    font-weight:bold;
                    font-style:italic;

