@font-face
	font-family: "Adventure";
	src: url("fonts/Adventure.otf") format("truetype");

$color1 = #F3BC55;
$color2 = #fedd7a;
$font = arial; //Adventure

html, body
	height: 100%;
	font-family: $font;
	margin: 0;
	padding: 0;

a
	cursor: pointer;
	text-decoration: none;

.modal-body
	background-color: $color1;

.modal-header, .modal-footer
	background-color: $color2;
