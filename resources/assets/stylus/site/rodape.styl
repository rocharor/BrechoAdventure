.rodape
    position: relative;
    background-color:$color1;
    height: 100px;
    border-top: solid 5px $color4;
    color: $color4;
    font-family: arial;
    font-weight: bold;
    .text
        width:100%;
        text-align: center;
        position: absolute;
        bottom: 0;
    .redeSocial
        background-image: url('/imagens/rede-social.jpg');
        display: inline-block;
        float: right;
        width: 60px;
        height: 60px;
        margin: 20px 5px;
        cursor: pointer;
        border-radius: 10px;
    .redeSocial:hover
        // -webkit-box-shadow: 0 0 35px 5px $color4;
        // -moz-box-shadow: 0 0 35px 5px $color4;
        // box-shadow: 0 0 35px 5px $color4;
        box-shadow: 5px 5px 0 $color4;
        -webkit-box-shadow: 5px 5px 0 $color4;
        -moz-box-shadow: 5px 5px 0 $color4;
    .facebook
        background-position: -82px -76px;
    .twitter
        background-position: -217px -76px;
    .google
        background-position: -353px -76px;
