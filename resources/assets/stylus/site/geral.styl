@import "../global.styl";

@font-face
	font-family: "Adventure_";
	src: url("/fonts/adventure/Adventure.otf") format("truetype");

// $font = 'serif';
$font = 'Adventure_';
// $font = arial;

html, body
	font-family: $font;
	height: 100%;
	background-color: #bbb;

.container
	background-color: #eee;
	padding: 30px;

a
	cursor: pointer;
	text-decoration: none;

.modal-body
	background-color: $color5;

.modal-header, .modal-footer
	background-color: $color6;

.btn-success
	background-color: $color8;
	border-color: $color1;

.btn-danger
	background-color: $color9;
	border-color: $color1;

.btn-warning
	background-color: $color5;
	border-color: $color1;

.btn-info
	background-color: $color10;
	border-color: $color1;

.btn-primary
	background-color: $color11;
	border-color: $color1;

.btn-success:hover,
.btn-danger:hover,
.btn-info:hover,
.btn-primary:hover,
.btn-warning:hover
	background-color: $color2;
