.div-produtos
	padding: 10px;
	.titulo
		white-space: nowrap;
		width: 100%;
		overflow: hidden;
		text-overflow: ellipsis;

.div-produto:hover
	transition: ease all 0.5s;
	box-shadow: 2px 2px 10px #888888;
	padding: 10px;

.img-ativo
	background-image: url(/imagens/favorito_ativo.jpg);
	background-size: cover;
	width: 20px;
	height: 20px;
	display:block;

.img-inativo
	background-image: url(/imagens/favorito_inativo.jpg);
	background-size: cover;
	width: 20px;
	height: 20px;
	display:block;

